@import "bootstrap";

/* header */
.navbar-inner {
  background-image: none;
  border: 0px;
  background-color: #872890;
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
  padding-left: 10px;
  padding-right: 10px;
}

.navbar {
  margin-bottom: 0px;
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 15px;
  border-top: 0px solid #eaeaea;
  color: #999;
}

footer a {
  color: #555;
}

footer a:hover {
  color: #222;
}

footer small {
  float: left;
}

footer ul {
  float: right;
  list-style: none;
}

footer ul li {
  float: left;
  margin-left: 10px;
}

.breast_cancer {
  font-family: 'Quintessential', 'cursive';
  background-color: hotpink;
}

.table th, .table-striped tbody tr:nth-child(odd) th {
  background-color: #872890;
}

.dropdown-menu, .navbar .nav > li > a:focus, .navbar .nav > li > a:hover, .navbar .nav li.dropdown.open > .dropdown-toggle, .navbar .nav li.dropdown.active > .dropdown-toggle, .navbar .nav li.dropdown.open.active > .dropdown-toggle {
  background-color: #771880;
}

.dropdown-menu li > a:hover, .dropdown-menu li > a:focus, .dropdown-submenu:hover > a{
  background-color: #A728A0;
}

// Fonts
.jumbotron {
  color: #872890;
}

a {
  color: #3728F0;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Droid Serif';
  color: #771880;
}

p, div {
  font-family: 'Droid Sans', serif;
  font-size: 16px;
  line-height: 32px;
  color: black;
}

p {
  padding-bottom: 16px;
}

.testimonial {
    font-family: 'Arial', serif;
    font-size: 14px;
    line-height: 20.5px;
    padding-bottom:10px;
}

// Background image

.container-fluid {
  background: url(<%= asset_path 'creampaperpink.png' %>) repeat 0 0;
  text-align: left;
  padding-left: 12.5%;
  padding-right: 12.5%;
  width: 75%;
  min-width: 320px;
}

.img_pair {
  max-height: 267px;
}

.icon-ok {
  color: green;
}

.icon-remove {
  color: darkred;
}

.formbutton {
  display: inline-block;
}

.btn-warning {
  border-radius: 10px;
}

.btn-info {
  border-radius: 10px;
}

.table-bordered {
  border: 1px #ddd;
}

.table-bordered td, .table-bordered th {
  border: 1px solid #ddd;
}

.margin10 li {
  margin: 10px 0;
}

.disclaimer-table {
  border: #000000 solid 7px
}

.title{
  font-size: 23px;
}

.strong{
  font-weight: bold;
}

.em{
  font-style: italic;
}

@media (max-width: 900px) {
  body {
    padding-right: 0px;
    padding-left: 0px;
  }
  .container-fluid {
    width: 95%;
    padding-left: 2.5%;
    padding-right: 2.5%;
  }
  p, div {
    font-size: 14px;
    line-height: 31.5px;
  }
    .testimonial{
        font-size: 13px;
        line-height: 19px;
    }
  p {
    padding-bottom: 14px;
  }
  label {
    font-size: 13.5px;
  }
  .table {
    font-size: 14px;
    line-height: 31.5px;
  }
  .table div {
    font-size: 14px;
    line-height: 31.5px;
  }
  .img_pair {
    max-height: 175px;
  }
  .applicator {
    max-height: 170px;
    max-width: 170px;
  }
  .seal {
    max-height: 120px;
    max-width: 120px;
  }
  h1 {
    font-size: 30px;
  }
  h2 {
    font-size: 24px;
  }
  h3 {
    font-size: 20px;
  }
  h4 {
    font-size: 17px;
  }
  h5 {
    font-size: 14px;
  }
  .navbar .brand {
    font-size: 18px;
    padding-bottom: 17px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 17px;
  }
  .navbar .nav > li > a {
    font-size: 15px;
    padding-bottom: 22px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 22px;
  }

  .title{
    font-size: 20px;
  }
}

@media (max-width: 520px) {
  p, div {
    font-size: 13px;
    line-height: 27px;
  }
    .testimonial{
        font-size: 11px;
        line-height: 17px;
    }
  p {
    padding-bottom: 13px;
  }
  label {
      font-size: 12px;
  }
  .table {
    font-size: 12px;
    line-height: 24px;
  }
  .table div {
    font-size: 12px;
    line-height: 24px;
  }
  .img_pair {
    max-height: 110px;
  }
  .applicator {
    max-height: 110px;
    max-width: 110px;
  }
  .seal {
    max-height: 95px;
    max-width: 95px;
  }
  h1 {
    font-size: 17.5px;
  }
  h2 {
    font-size: 17px;
  }
  h3 {
    font-size: 15px;
  }
  h4 {
    font-size: 13px;
  }
  h5 {
    font-size: 10px;
  }
  .navbar .brand {
    font-size: 17px;
    padding-bottom: 14px;
    padding-left: 6px;
    padding-right: 6px;
    padding-top: 14px;
  }
  .non-mobile-only {
    display: none;
  }
  .navbar .nav > li > a {
    font-size: 12px;
    padding-bottom: 17px;
    padding-left: 6px;
    padding-right: 6px;
    padding-top: 17px;
  }
  .title{
    font-size: 17px;
  }
}

@media (min-width: 521px) {
  .mobile-only {
    display: none;
  }
}

.faq-answer {
    margin: 0 0 40px 0;
}