                                <%= link_to image_tag('LeapingBunny-Logo.png', :class => '', :height => '100',
                                                      alt: 'Leaping Bunny Seal'), 'https://www.neueve.com/blog/cruelty-free-certified/' %>
                            </div>
                            <div class="col-6 text-center">
                                <%= image_tag("OnePercentFTP.png", :class => '', :height => '100',
                                              alt: '1% for the Planet Seal') %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
